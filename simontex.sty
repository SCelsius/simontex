% Macro that takes the last element of the arrays and bubbles it up according to alphabetic ordering
\def\bubble@up{%
\newcount\j
\j \value{abbrv@count}\relax
\advance\j -1\relax
\multido{\i=\value{abbrv@count}+-1}{\j}{%
\ifnum\pdf@strcmp{\@bbrvsget{\i}}{\@bbrvsget{\j}} <0
\@bbrvsswitch{\i}{\j}
\@bbrmsswitch{\i}{\j}
\@bbrdsswitch{\i}{\j}
\@bbrnsswitch{\i}{\j}
\@bbrlsswitch{\i}{\j}
\else
\multidostop
\fi
\advance\j -1\relax
}
}


